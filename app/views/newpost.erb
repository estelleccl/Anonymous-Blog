<% if !@error_msg.nil? %>
  <% @error_msg.each do |v| %>
    <%= v %><br>
  <% end %>
<% end %>

<form action= "/new_post" method="post" class="basic-grey">
    <h1>Post something  
        <!-- <span>Please fill all the texts in the fields.</span>-->
    </h1> 
    <label>
        <span>Your Name :</span>
        <input id="author" type="text" name="author" placeholder="Your Name" />
    </label>
     <label>
        <span>Title :</span>
        <input id="title" type="text" name="title" placeholder="Your subject" />
    </label> 
    <label>
        <span>Content :</span>
        <textarea id="content" name="content" placeholder="What do you want to share on your blog"></textarea>
    </label> 
    <label>
        <span>Tag(s) :</span>
        <textarea id="tags" name="tags" placeholder="Separate tags by commas"></textarea>
    </label> 
       
     <label>
        <span>&nbsp;</span>

        <input type="Submit" class="button" value="Post" />
         <input type="reset" class="button"  value="Reset">
    </label>    
</form>
